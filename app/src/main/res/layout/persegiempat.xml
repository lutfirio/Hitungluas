<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HitungPersegiEmpat" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Menghitung Luas Segi Empat" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="Sisi 1 :" />

    <EditText
        android:id="@+id/txtSisi1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />
        <requestFocus />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSisi1"
        android:layout_below="@+id/txtSisi1"
        android:layout_marginTop="16dp"
        android:text="Sisi 2 :" />

    <EditText
        android:id="@+id/txtSisi2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" >
    </EditText>

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSisi2"
        android:layout_below="@+id/txtSisi2"
        android:layout_marginTop="20dp"
        android:onClick="hitungLuas"
        android:text="Hitung"
        android:background="#4052b5"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnHitung"
        android:layout_below="@+id/btnHitung"
        android:layout_marginTop="18dp"
        android:text="Luas :" />

    <EditText
        android:id="@+id/txtLuas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="15dp"
        android:editable="false"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling :"
        android:layout_below="@+id/txtLuas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtKeliling"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:layout_below="@+id/TextView04"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="backtoMenu"
        android:text="Kembali ke Menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4052b5"
        android:textColor="#fff" />

</RelativeLayout>